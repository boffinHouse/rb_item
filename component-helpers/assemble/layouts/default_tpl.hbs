<!DOCTYPE html>
 <html lang="de">

	<head>
		<meta charset="utf-8" />
		<title>rb-item</title>

		<meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=IE7" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<link href="css/styles.css" rel="stylesheet" />
		<script src="js/object-assign.js"></script>
		<script>
			(function(docElem){
				if(!window.fetch || !docElem.closest || !String.prototype.includes){ //  || !Object.assign || !docElem.before || !docElem.queryAll || !Array.prototype.find
					document.write('<script src="https://cdnjs.cloudflare.com/ajax/libs/dom4/1.4.6/dom4.js"><\/script>');
				}
			})(document.documentElement);
		</script>

		<script src="https://afarkas.github.io/lazysizes/lazysizes.js"></script>

	</head>
	<body>
		<header class="rb-page-header">


			<div class="page-header-block is-column-group is-gutter">
				<div class="is-size-auto is-offset-left">
					<div class="rb-logo">
						<h1 class="logo-title">rb_item</h1>
					</div>
				</div>
				<div class="is-size-auto is-offset-right">
					<form class="rb-libchooser" id="libchooser">
						<label>
							<input type="radio" name="domlib"
							       value="rbdom"
							       data-url="https://boffinhouse.github.io/rawblock/sources/js/libs/dom.js"
							       checked />
							rbdom
						</label>
						<label>
							<input type="radio" name="domlib"
							       value="jquery"
							       data-url="http://code.jquery.com/jquery-2.1.4.js" />
							jquery
						</label>
					</form>
				</div>
			</div>

		</header>
		<main class="rb-page-main">
			{{> body }}
		</main>
		<script>
			(function(){
				var input;
				document.querySelector('#libchooser').addEventListener('change', function(){
					var value = this.querySelector(':checked').value;
					location.search = '?domlib='+value;
				});

				if((location.search || '').match(/domlib\=(.+)(&)*/)){
					input = document.querySelector('#libchooser [value="'+ RegExp.$1 +'"]');

				}
				if(!input){
					input = document.querySelector('#libchooser [value="rbdom"]');
				}
				input.checked = true;
				document.write('<script src="' + input.getAttribute('data-url') +'"><\/script>');
			})();
		</script>
		<script src="https://boffinhouse.github.io/rawblock/sources/js/libs/rawblock.js"></script>

	</body>
</html>
